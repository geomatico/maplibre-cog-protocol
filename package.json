{
  "name": "@geomatico/maplibre-cog-protocol",
  "version": "0.8.0",
  "description": "Custom protocol to load Cloud Optimized GeoTIFFs (COG) in Maplibre GL JS",
  "scripts": {
    "watch:src": "rimraf dist && rollup -c rollup.config.mjs --environment DEV --watch",
    "watch:examples": "five-server",
    "watch": "concurrently --names 'SRC,EXAMPLES' --prefix-colors 'yellow,blue' --kill-others 'npm run watch:src' 'npm run watch:examples'",
    "lint": "eslint --max-warnings 0 --fix src/",
    "test": "jest --coverage --verbose --runInBand",
    "test:ci": "jest --runInBand --coverage --verbose",
    "build:umd": "rollup -c rollup.config.mjs",
    "build:esm": "tsc --outDir dist/esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build": "npm run lint && npm run test && rimraf dist && concurrently --names 'UMD,ESM,TYPES' 'npm run build:umd' 'npm run build:esm' 'npm run build:types'",
    "gh-publish": "rimraf examples/dist && npm run build && cp -r dist examples && gh-pages -d examples"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "browser": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "author": "Geomatico <info@geomatico.es>",
  "dependencies": {
    "@mapbox/sphericalmercator": "^1.2.0",
    "d3-scale": "^4.0.2",
    "geotiff": "^2.1.3",
    "quick-lru": "^7.1.0"
  },
  "peerDependencies": {
    "maplibre-gl": "^4.5.0 || ^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/d3-scale": "^4.0.8",
    "@types/jest": "^30.0.0",
    "@types/mapbox__sphericalmercator": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-plugin-jest": "^29.0.1",
    "five-server": "^0.4.4",
    "gh-pages": "^6.1.1",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.3",
    "ts-jest": "^29.2.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.44.0"
  }
}
